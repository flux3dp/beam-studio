{
  "name": "@beam-studio/app",
  "version": "2.6.3-alpha",
  "license": "AGPL-3.0-only",
  "homepage": "https://github.com/flux3dp/beam-studio",
  "description": "Beam Studio Electron App",
  "author": {
    "name": "FLUX Inc.",
    "email": "support@flux3dp.com"
  },
  "main": "public/js/node/main.js",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "build-node": "webpack --config webpack.node.js",
    "dev": "webpack watch",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "start": "electron ."
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@sentry/electron": "^7.5.0",
    "custom-electron-titlebar": "^4.2.8",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "font-scanner": "^0.2.1",
    "fontkit": "^2.0.4",
    "jimp": "^0.10.3",
    "ping": "^0.4.4",
    "remeda": "^2.23.0",
    "sprintf-js": "^1.1.3",
    "sudo-prompt": "^9.2.1",
    "ts-pattern": "^5.6.2",
    "write-file-atomic": "^7.0.0",
    "ws": "^7.5.10"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-react": "^7.14.5",
    "@sentry/webpack-plugin": "^2.16.1",
    "@svgr/webpack": "^8.1.0",
    "@types/fontkit": "^2.0.8",
    "@types/ping": "^0.4.4",
    "@types/sprintf-js": "^1.1.4",
    "@types/write-file-atomic": "^4.0.3",
    "@wdio/cli": "^8.6.2",
    "@wdio/local-runner": "^8.6.0",
    "@wdio/mocha-framework": "^8.5.6",
    "@wdio/sauce-service": "^8.6.2",
    "@wdio/spec-reporter": "^8.4.0",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^5.2.7",
    "electron": "35.7.5",
    "electron-builder": "26.3.6",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "playwright": "^1.31.2",
    "sass": "^1.83.4",
    "sass-loader": "^16.0.4",
    "style-loader": "^3.3.1",
    "ts-jest": "29.2.6",
    "ts-loader": "^9.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "packageManager": "pnpm@10.11.1",
  "build": {
    "appId": "com.flux3dp.beam-studio-flux",
    "extraMetadata": {
      "name": "beam-studio"
    },
    "protocols": {
      "name": "beam-studio-protocol",
      "schemes": [
        "beam-studio"
      ]
    },
    "generateUpdatesFilesForAllChannels": true,
    "extraResources": [
      "backend",
      "utils",
      {
        "from": "build/launcher-script.sh",
        "to": "launcher-script.sh"
      }
    ],
    "files": [
      "!**/*.{jsx,scss}"
    ],
    "publish": [
      {
        "provider": "s3",
        "bucket": "beamstudio",
        "path": "/${os}${env.PUBLISH_PATH}${env.PUBLISH_SUFFIX}"
      }
    ],
    "afterPack": "build/afterPack.js",
    "mac": {
      "category": "com.flux3dp.beam-studio-flux",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "Beam Studio need to use USB camera to preview certain devices.",
        "NSLocalNetworkUsageDescription": "Beam Studio need to use local network to connect to certain devices."
      },
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icon",
      "asarUnpack": "**/*.node"
    },
    "linux": {
      "category": "Graphics",
      "description": "Beam Studio",
      "vendor": "FLUX Inc.",
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "app-icons"
    },
    "win": {
      "icon": "app-icons/win-icon.ico",
      "signtoolOptions": {
        "sign": "./customCodeSign.windows.js",
        "certificateSubjectName": "FLUX TECHNOLOGY INC.",
        "publisherName": "FLUX TECHNOLOGY INC."
      }
    },
    "dmg": {
      "artifactName": "Beam Studio ${version}.${ext}",
      "sign": false
    },
    "nsis": {
      "include": "win-install.nsh",
      "artifactName": "Beam Studio Installer ${version}.${ext}",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "fileAssociations": [
      {
        "ext": "beam",
        "description": "Edit and cut image files",
        "role": "Editor"
      },
      {
        "ext": "bvg",
        "description": "Edit and cut image files",
        "role": "Editor"
      },
      {
        "ext": "svg",
        "description": "Edit and cut image files",
        "role": "Editor"
      },
      {
        "ext": "jpg",
        "description": "Edit and cut image files",
        "role": "Editor"
      },
      {
        "ext": "png",
        "description": "Edit and cut image files",
        "role": "Editor"
      }
    ]
  },
  "productName": "Beam Studio"
}
