{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "interfaces/*": [
        "./interfaces/*",
        "../web/interfaces/*"
      ],
      "app/*": [
        "../web/app/*"
      ],
      "helpers/*": [
        "../web/helpers/*",
      ],
      "implementations/*": [
        "../implementations/*",
      ],
      "node/*": [
        "./*"
      ],
    }
  },
  "include": [
    "./**/*.ts",
    "../web/helpers/i18n.ts",
    "../web/app/lang/*.ts",
    "../web/interfaces/ILang.d.ts",
  ],
  "exclude": [
    "node_modules"
  ],
}
