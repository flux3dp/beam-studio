{ 
    "compilerOptions": {
      "target": "es6",
      "esModuleInterop": true,
      "module": "AMD",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": false,
      "noImplicitAny": false,
      "downlevelIteration": true,
      "jsx": "react",
      "suppressImplicitAnyIndexErrors": true,
      "baseUrl": ".",
      "paths": {
        "react-proptypes": ["./public/js/lib/react/react-proptypes"] 
      }
    },
    "exclude": [
      "node_modules"
    ],
    "types": [
      "requirejs"
    ]
  }